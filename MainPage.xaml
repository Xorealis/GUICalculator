<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUICalculator.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Calculator"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry
                Placeholder="Enter equation in the form # operand #"
                SemanticProperties.Hint="The box in which the user enters their equation"
                FontSize="22"
                HorizontalOptions="Center" />
            <Button
                x:Name="EqualsBtn"
                Text="="
                SemanticProperties.Hint="Computes the entered equation"
                Clicked="EqualsBtn_Clicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
